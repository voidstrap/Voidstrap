<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#0A0A0A"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#262626"/>
    <SolidColorBrush x:Key="TextEditorBackgroundBrush" Color="#101010"/>
    <SolidColorBrush x:Key="TextEditorForegroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextEditorLinkBrush" Color="#A0A0A0"/>
    <Color x:Key="WindowBackgroundColorPrimary">#202020</Color>
    <Color x:Key="WindowBackgroundColorSecondary">#181818</Color>
    <Color x:Key="WindowBackgroundColorTertiary">#0F0F0F</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrushPrimary" Color="{StaticResource WindowBackgroundColorPrimary}" />
    <SolidColorBrush x:Key="WindowBackgroundBrushSecondary" Color="{StaticResource WindowBackgroundColorSecondary}" />
    <SolidColorBrush x:Key="WindowBackgroundBrushTertiary" Color="{StaticResource WindowBackgroundColorTertiary}" />
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TertiaryForegroundBrush" Color="#A0A0A0"/>

    <SolidColorBrush x:Key="AccentBrush" Color="#808080"/>
    <SolidColorBrush x:Key="AccentBrushSecondary" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="AccentGlowBrush" Color="#C0C0C0"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2E2E2E"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#505050"/>
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="MinWidth" Value="90"/>
        <Setter Property="MinHeight" Value="25"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
                            <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource AccentBrushSecondary}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource ButtonPressedBrush}"/>
                            <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource AccentGlowBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Root" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ToggleButton">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="MinWidth" Value="90"/>
        <Setter Property="MinHeight" Value="25"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="Root"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
                            <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource AccentBrushSecondary}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource ButtonPressedBrush}"/>
                            <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource AccentGlowBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Root" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Storyboard x:Key="AccentGlowPulse" RepeatBehavior="Forever" AutoReverse="True">
        <ColorAnimation Storyboard.TargetProperty="(SolidColorBrush.Color)"
                        Storyboard.TargetName="AccentGlowBrush"
                        To="#E0E0E0" Duration="0:0:1.5"/>
    </Storyboard>
</ResourceDictionary>
