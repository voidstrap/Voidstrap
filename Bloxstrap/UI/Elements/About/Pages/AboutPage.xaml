                </StackPanel>
            </controls:Expander>

            <controls:Expander
                Grid.Column="2"
                Margin="4,0,0,0"
                BorderThickness="2,2,2,2"
                HeaderIcon="Heart20"
                HeaderText="Inspirations"
                IsExpanded="True">
                <StackPanel>
