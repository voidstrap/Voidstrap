<ui:UiPage
    x:Class="Voidstrap.UI.Elements.About.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Voidstrap.UI.Elements.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dmodels="clr-namespace:Voidstrap.UI.ViewModels.About"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Voidstrap.UI.ViewModels"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="AboutPage"
    d:DataContext="{d:DesignInstance dmodels:AboutViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="1500"
    d:DesignWidth="800"
    KeyDown="UiPage_KeyDown"
    Scrollable="True"
    mc:Ignorable="d">
    <ui:UiPage.Resources>
        <Storyboard x:Key="EggStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="Image1"
                Storyboard.TargetProperty="Opacity"
                From="1.0"
                To="0.0"
                Duration="0:0:3" />
            <DoubleAnimation
                Storyboard.TargetName="Image2"
                Storyboard.TargetProperty="Opacity"
                From="0.0"
                To="1.0"
                Duration="0:0:3" />
        </Storyboard>
    </ui:UiPage.Resources>

    <StackPanel Margin="0,0,14,14">

        <Grid Margin="0,0,0,24" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image
                x:Name="Image1"
                Grid.Column="0"
                Width="72"
                Height="72"
                VerticalAlignment="Center"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="pack://application:,,,/Voidstrap.ico" />
            <Image
                x:Name="Image2"
                Grid.Column="0"
                Width="72"
                Height="72"
                VerticalAlignment="Center"
                Opacity="0"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="pack://application:,,,/Resources/BootstrapperStyles/ByfronDialog/Matt.png" />

            <StackPanel
                Grid.Column="1"
                Margin="12,0,0,0"
                VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Margin="0,0,4,0"
                        FontSize="24"
                        FontWeight="Medium"
                        Text="Voidstrap" />

                </Grid>
                <TextBlock Text="A Bloxstrap Fork." />

            </StackPanel>
        </Grid>

        <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <ui:Anchor
                Margin="0,0,8,8"
                Content="{x:Static resources:Strings.Menu_About_ReportIssue}"
                Icon="BookExclamationMark24"
                NavigateUri="https://github.com/midaskira/Voidstrap/issues" />
            <ui:Anchor
                Margin="0,0,0,8"
                Click="Anchor_Click"
                Content="{x:Static resources:Strings.Menu_About_DiscordServer}"
                Icon="Chat48"
                NavigateUri="https://discord.gg/Gnu7ZuVh3z" />
        </WrapPanel>

        <StackPanel Visibility="{Binding BuildInformationVisibility, Mode=OneTime}">
            <TextBlock
                Margin="0,16,0,0"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Text="Build Information" />

            <Grid Margin="0,4,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <!-- Label column -->
                    <ColumnDefinition Width="*" />
                    <!-- Value column -->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Updated row -->
                    <RowDefinition Height="Auto" />
                    <!-- Version row -->
                    <RowDefinition Height="Auto" />
                    <!-- Commit hash row -->
                </Grid.RowDefinitions>

                <!-- Updated Label -->
                <TextBlock
        Grid.Row="0"
        Grid.Column="0"
        FontSize="14"
        FontWeight="Medium"
        Text="Updated:"
        VerticalAlignment="Center"
        Margin="0,0,8,0" />

                <!-- Build Timestamp -->
                <TextBlock
        Grid.Row="0"
        Grid.Column="1"
        FontSize="14"
        Text="{Binding BuildTimestamp, Mode=OneTime}"
        VerticalAlignment="Center" />

                <!-- Version Label -->
                <TextBlock
        Grid.Row="1"
        Grid.Column="0"
        FontSize="14"
        FontWeight="Medium"
        Text="Version:"
        VerticalAlignment="Center"
        Margin="0,4,8,0" />

                <!-- Version Value -->
                <TextBlock
        Grid.Row="1"
        Grid.Column="1"
        FontSize="14"
        Text="{Binding Version, Mode=OneTime}"
        VerticalAlignment="Center" />

                <!-- Commit Hash Label -->
                <TextBlock
        Grid.Row="2"
        Grid.Column="0"
        FontSize="14"
        FontWeight="Medium"
        Text="Commit Hash:"
        Visibility="{Binding BuildCommitVisibility, Mode=OneTime}"
        VerticalAlignment="Center"
        Margin="0,4,8,0" />

                <!-- Commit Hash Value (optional if you want to show it) -->
                <TextBlock
        Grid.Row="2"
        Grid.Column="1"
        FontSize="14"
        Text="{Binding CommitHash, Mode=OneTime}"
        Visibility="{Binding BuildCommitVisibility, Mode=OneTime}"
        VerticalAlignment="Center" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,0,0,4"
                    VerticalAlignment="Bottom"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Visibility="{Binding BuildCommitVisibility, Mode=OneTime}">
                    <Hyperlink
                        Command="models:GlobalViewModel.OpenWebpageCommand"
                        CommandParameter="{Binding BuildCommitHashUrl, Mode=OneTime}"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                        <TextBlock Text="{Binding BuildMetadata.CommitHash, Mode=OneTime}" />
                    </Hyperlink>
                </TextBlock>

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,4,16,4"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Commit Ref"
                    Visibility="{Binding BuildCommitVisibility, Mode=OneTime}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="0,0,0,4"
                    VerticalAlignment="Bottom"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Text="{Binding BuildMetadata.CommitRef, Mode=OneTime}"
                    Visibility="{Binding BuildCommitVisibility, Mode=OneTime}" />
            </Grid>
        </StackPanel>

        <TextBlock
            Margin="0,16,0,0"
            FontFamily="Segoe UI Semibold"
            FontSize="20"
            FontWeight="Medium"
            Text="{x:Static resources:Strings.Menu_About_Contributors}" />
        <TextBlock
            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
            Text="These are the people who have made notable contributions to Voidstrap, helping make it what it is."
            TextWrapping="Wrap" />
