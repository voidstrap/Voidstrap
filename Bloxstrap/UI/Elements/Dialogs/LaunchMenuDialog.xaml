<base:WpfUiWindow
    x:Class="Voidstrap.UI.Elements.Dialogs.LaunchMenuDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Voidstrap.UI.Elements.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Voidstrap.UI.ViewModels"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Voidstrap"
    Width="580"
    MinWidth="0"
    MinHeight="0"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    BorderBrush="{DynamicResource SystemAccentBrush}"
    BorderThickness="2,2,2,2"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0" SpreadMethod="Pad">
                <GradientStop Offset="0.00" Color="{DynamicResource WindowBackgroundColorPrimary}" />
                <GradientStop Offset="0.35" Color="{DynamicResource WindowBackgroundColorSecondary}" />
                <GradientStop Offset="0.65" Color="{DynamicResource WindowBackgroundColorSecondary}" />
                <GradientStop Offset="1.00" Color="{DynamicResource WindowBackgroundColorThird}" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title Bar  -->
        <ui:TitleBar
            Title="Voidstrap"
            Grid.Row="0"
            Padding="8"
            CanMaximize="False"
            Icon="pack://application:,,,/Voidstrap.ico"
            KeyboardNavigation.TabNavigation="None"
            ShowMaximize="False"
            ShowMinimize="True" />

        <Grid x:Name="grid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Panel (Logo and Info)  -->
            <Grid
                Grid.Column="0"
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" Width="72" Height="72" Source="pack://application:,,,/Voidstrap.ico" RenderOptions.BitmapScalingMode="HighQuality" />
                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="LaunchTitle" Text="Voidstrap" FontSize="24" />
                        <TextBlock Text="{Binding Version, Mode=OneTime}" VerticalAlignment="Bottom" FontSize="12" Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                    <ui:Hyperlink Icon="QuestionCircle48" Content="{x:Static resources:Strings.About_Title}" Command="{Binding LaunchAboutCommand, Mode=OneTime}" />
                    <ui:Hyperlink Icon="Chat48" Content="Discord Server" NavigateUri="https://discord.gg/X3CRTP66VG" HorizontalAlignment="Center" />
                </StackPanel>

                <!--  About Link  -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" />

                <!--  About Link  -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center"/>
            </Grid>


            <!--  Right Panel (Main Actions)  -->
            <StackPanel Grid.Column="1" Margin="0,9,0,8">
                <!--  Launch Roblox Button  -->
                <ui:CardAction
                    Width="285"
                    Command="{Binding LaunchRobloxCommand, Mode=OneTime}"
                    Icon="Games28"
                    IconFilled="False"
                    TabIndex="0">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            Text="{x:Static resources:Strings.LaunchMenu_LaunchRoblox}" />
                    </StackPanel>
                </ui:CardAction>

                <!--  Roblox Studio and Settings Buttons  -->
                <Grid Height="61">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <ui:CardAction
                        Grid.Column="1"
                        Width="148"
                        Margin="-435,8,10,0"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding LaunchSettingsCommand, Mode=OneTime}"
                        Icon="Settings28"
                        TabIndex="1">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="13.8"
                                Text="Settings" />
                        </StackPanel>
                    </ui:CardAction>

                    <ui:CardAction
                        Grid.Column="0"
                        Width="130"
                        Margin="162,8,10,0"
                        VerticalAlignment="Top"
                        Command="{Binding LaunchRobloxStudioCommand, Mode=OneTime}"
                        Icon="WindowDevTools24"
                        IconFilled="False"
                        TabIndex="2">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock
                                Width="39"
                                HorizontalAlignment="Center"
                                FontSize="13.8"
                                Text="Studio" />
                        </StackPanel>
                    </ui:CardAction>
                </Grid>

                <Border Margin="12" />
                <ui:CardAction
                    Width="285"
                    Margin="0,10,0,0"
                    Command="models:GlobalViewModel.OpenWebpageCommand"
                    CommandParameter="https://www.roblox.com/communities/36100411/Plexity-Studio#!/about"
                    Icon="People24"
                    IconFilled="False"
                    TabIndex="2">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            Text="Roblox Group" />
                        <TextBlock
                            Margin="0,2,0,0"
                            Padding="0,0,16,0"
                            FontSize="12"
                            Foreground="Gray"
                            Text="Join our Roblox Group" />
                    </StackPanel>
                </ui:CardAction>
            </StackPanel>
        </Grid>
    </Grid>
</base:WpfUiWindow>