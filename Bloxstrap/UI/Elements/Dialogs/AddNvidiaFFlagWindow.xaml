<base:WpfUiWindow
    x:Class="Voidstrap.UI.Elements.Dialogs.AddNvidiaFFlagWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Add NVIDIA Setting"
    Width="520"
    MaxHeight="650"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    ExtendsContentIntoTitleBar="True">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Offset="0.00" Color="{DynamicResource WindowBackgroundColorPrimary}" />
                <GradientStop Offset="0.80" Color="{DynamicResource WindowBackgroundColorSecondary}" />
                <GradientStop Offset="1.10" Color="{DynamicResource WindowBackgroundColorThird}" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="Add NVIDIA Setting"
            Padding="8"
            CanMaximize="False"
            ShowMaximize="False"
            ShowMinimize="False"/>

        <TabControl x:Name="Tabs" Grid.Row="1" Margin="16">
            <TabItem Header="Add Single">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Setting Name"/>
                    <TextBox x:Name="NameBox" Grid.Row="1"/>

                    <TextBlock Grid.Row="2" Margin="0,12,0,0" Text="Setting ID"/>
                    <TextBox x:Name="SettingIdBox" Grid.Row="3"/>

                    <TextBlock Grid.Row="4" Margin="0,12,0,0" Text="Value"/>
                    <TextBox x:Name="ValueBox" Grid.Row="5"/>

                    <TextBlock Grid.Row="6" Margin="0,12,0,0" Text="Value Type"/>
                    <ComboBox x:Name="ValueTypeBox" Grid.Row="7">
                        <ComboBoxItem Content="Dword" IsSelected="True"/>
                        <ComboBoxItem Content="String"/>
                        <ComboBoxItem Content="Binary"/>
                        <ComboBoxItem Content="Boolean"/>
                        <ComboBoxItem Content="Hex"/>
                    </ComboBox>
                </Grid>
            </TabItem>

            <TabItem Header="Import NIP">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox
                        x:Name="NipTextBox"
                        AcceptsReturn="True"
                        AcceptsTab="True"
                        FontFamily="Consolas"
                        FontSize="13"
                        Padding="10"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"/>

                    <Button
                        Grid.Row="1"
                        Height="32"
                        Margin="0,10,0,0"
                        Content="Import .nip file"
                        Click="ImportFromFile_Click"/>
                </Grid>
            </TabItem>

            <TabItem Header="Import Full Value">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Enter Full Value (Name | SettingID | Value | ValueType)"/>
                    <TextBox x:Name="FullValueBox" Grid.Row="1" AcceptsReturn="True" Height="50"/>

                    <Button
                        Grid.Row="2"
                        Height="32"
                        Content="Parse and Add"
                        Click="ParseAndAdd_Click"/>
                </Grid>
            </TabItem>

        </TabControl>

        <Border
            Grid.Row="2"
            Padding="12"
            BorderThickness="0,1,0,0"
            BorderBrush="#333">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button
                    Width="100"
                    Margin="0,0,8,0"
                    Content="OK"
                    Click="OK_Click"/>
                <Button
                    Width="100"
                    Content="Cancel"
                    IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</base:WpfUiWindow>
