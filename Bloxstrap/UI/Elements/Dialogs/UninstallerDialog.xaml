<base:WpfUiWindow x:Class="Hellstrap.UI.Elements.Dialogs.UninstallerDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  xmlns:local="clr-namespace:Hellstrap.UI.Elements.Dialogs"
                  xmlns:base="clr-namespace:Hellstrap.UI.Elements.Base"
                  xmlns:dmodels="clr-namespace:Hellstrap.UI.ViewModels.Dialogs"
                  xmlns:resources="clr-namespace:Hellstrap.Resources"
                  xmlns:controls="clr-namespace:Hellstrap.UI.Elements.Controls"
                  mc:Ignorable="d"
                  d:DataContext="{d:DesignInstance dmodels:UninstallerViewModel, IsDesignTimeCreatable=True}"
                  Title="Hellstrap"
                  MinWidth="0"
                  MinHeight="0"
                  Width="548"
                  Height="299"
                  SizeToContent="Height"
                  ResizeMode="NoResize"
                  Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                  ExtendsContentIntoTitleBar="True"
                  WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Define the layout of rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Grid.ColumnSpan="2"
                     Padding="8"
                     Title="Hellstrap"
                     ShowMinimize="False"
                     ShowMaximize="False"
                     CanMaximize="False"
                     KeyboardNavigation.TabNavigation="None"
                     Icon="pack://application:,,,/Hellstrap.ico" />

        <!-- Main Content Panel -->
        <StackPanel Grid.Row="1" Margin="12,12,12,10" Grid.RowSpan="2">
            <TextBlock FontSize="20" FontWeight="SemiBold" Text="{x:Static resources:Strings.Uninstaller_Title}" />
            <controls:MarkdownTextBlock FontSize="14" Margin="0,0,0,16"
                                        MarkdownText="{Binding Text, Mode=OneTime}"
                                        TextWrapping="Wrap"
                                        Height="194" />
        </StackPanel>

        <!-- Footer with Action Buttons -->
        <Border Grid.Row="2" Margin="0,10,0,0" Padding="15"
                Background="{ui:ThemeResource SolidBackgroundFillColorSecondaryBrush}">
            <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight" HorizontalAlignment="Right">
                <CheckBox Content="{x:Static resources:Strings.Uninstaller_KeepData_Label}"
                          IsChecked="{Binding KeepData, Mode=TwoWay}"
                          Width="215" />

                <Button MinWidth="100" Content="{x:Static resources:Strings.Uninstaller_Uninstall}"
                        Command="{Binding ConfirmUninstallCommand}"
                        Width="121" Background="Red" />

                <Button MinWidth="100" Margin="12,0,0,0" Content="{x:Static resources:Strings.Common_Cancel}"
                        IsCancel="True" />
            </StackPanel>
        </Border>
    </Grid>
</base:WpfUiWindow>
