<ui:UiPage
    x:Class="Voidstrap.UI.Elements.Settings.Pages.MobilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:controls="clr-namespace:Voidstrap.UI.Elements.Controls"
    Title="Mobile Support">

    <StackPanel>
        <StackPanel Margin="0,0,0,16">
            <TextBlock
                FontSize="14"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="Set up Chrome Remote Desktop directly inside Voidstrap for Mobile/Tablet Support." />
        </StackPanel>

        <ui:Card x:Name="InstallerCard" Margin="0,0,0,16" Padding="24" Width="400">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar x:Name="InstallerProgressBar" Width="350" Height="20" Minimum="0" Maximum="100" Value="0"/>
                <TextBlock x:Name="StatusText" Margin="0,8,0,0" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="Preparing installer..." TextAlignment="Center"/>
            </StackPanel>
        </ui:Card>

        <ui:Card x:Name="CompletionCard" Margin="0,0,0,16" Padding="32" Width="700" Height="250" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock FontSize="62" Text="📱" TextAlignment="Center"/>
                <TextBlock FontSize="16" Foreground="{DynamicResource TextFillColorSecondaryBrush}" 
                           Text="Mobile Support" 
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Width="500"/>
                <TextBlock FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" 
                           Text="Chrome Remote Desktop will now open in your default browser." 
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Width="500"/>
            </StackPanel>
        </ui:Card>
    </StackPanel>
</ui:UiPage>
