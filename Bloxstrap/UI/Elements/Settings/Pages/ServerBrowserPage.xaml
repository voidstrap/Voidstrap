<ui:UiPage
    x:Class="Voidstrap.UI.Elements.Settings.Pages.ServerBrowserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Server Browser"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Margin="0,0,14,14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,16"
            FontSize="13"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="Browse public Roblox servers. This info might not be accurate to real ping." />

        <WrapPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Foreground="{StaticResource TextFillColorSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="14" Text="Place ID:" />
            <TextBox x:Name="PlaceIdTextBox" Width="200" Height="34" Margin="0,0,10,0" />

            <TextBlock Margin="20,0,8,0" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource TextFillColorSecondaryBrush}" Text="Servers Details:" />

            <ComboBox
        x:Name="ServerLimitComboBox"
        Width="100"
        Height="34"
        SelectedIndex="2"
        SelectionChanged="ServerLimitComboBox_SelectionChanged">
                <ComboBoxItem Content="10" />
                <ComboBoxItem Content="25" />
                <ComboBoxItem Content="50" />
                <ComboBoxItem Content="100" />
            </ComboBox>

            <!-- Player Sort Dropdown -->
            <ComboBox
        x:Name="PlayerSortComboBox"
        Width="140"
        Height="34"
        SelectedIndex="0"
        Margin="4,0,0,0"
        SelectionChanged="PlayerSortComboBox_SelectionChanged">
                <ComboBoxItem Content="Lowest Players" />
                <ComboBoxItem Content="Highest Players" />
            </ComboBox>

            <!-- Ping Sort Dropdown -->
            <ComboBox
        x:Name="PingSortComboBox"
        Width="140"
        Height="34"
        SelectedIndex="0"
        Margin="4,0,0,0"
        SelectionChanged="PingSortComboBox_SelectionChanged">
                <ComboBoxItem Content="Lowest Ping" />
                <ComboBoxItem Content="Highest Ping" />
            </ComboBox>
        </WrapPanel>

        <Border Grid.Row="2" CornerRadius="8" Background="{DynamicResource ControlFillColorPrimaryBrush}" 
                BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <DataGrid x:Name="DataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                          IsReadOnly="True" GridLinesVisibility="None" HeadersVisibility="Column" RowHeight="32"
                          AlternatingRowBackground="{DynamicResource ControlFillColorSecondaryBrush}"
                          Background="Transparent" BorderThickness="0" MouseDoubleClick="DataGrid_MouseDoubleClick"
                          CanUserSortColumns="True"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          MinWidth="700"
                          MinHeight="400">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="ToolTip" Value="{Binding Tooltip}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLowestPing}" Value="True">
                                    <Setter Property="Background" Value="#FF3A3A3A"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Server ID" Binding="{Binding Id}" Width="2*" MinWidth="300" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Players" Binding="{Binding Playing}" Width="*" MinWidth="125" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Max Players" Binding="{Binding MaxPlayers}" Width="*" MinWidth="125" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Server FPS" Binding="{Binding FPS}" Width="*" MinWidth="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Ping" Binding="{Binding Ping}" Width="*" MinWidth="100" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <ui:Button Width="140" Margin="0,0,10,0" Click="CopySelectedButton_Click" Content="Copy Selected" Icon="Copy16"/>
            <ui:Button Width="200" Margin="0,0,10,0" Click="JoinSelectedButton_Click" Content="Join Selected Server" Icon="ArrowExit20"/>
            <ui:Button x:Name="JoinLowestPingButton" Margin="0,0,10,0" Click="JoinLowestPingButton_Click" Content="No Server Detected" Icon="Rocket24"/>
        </StackPanel>
    </Grid>
</ui:UiPage>
