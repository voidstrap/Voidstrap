<ui:UiPage
    x:Class="Voidstrap.UI.Elements.Settings.Pages.NewsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:conv="clr-namespace:Voidstrap.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="820"
    Title="News"
    Scrollable="True">

    <ui:UiPage.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <conv:InvertBooleanToVisibilityConverter x:Key="InvertBoolToVis" />
    </ui:UiPage.Resources>

    <StackPanel Margin="0,0,20,20">

        <!-- Header -->
        <StackPanel Margin="0,0,0,16">
            <TextBlock
                Text="Latest updates and announcements"
                Margin="0,0,0,4"
                FontSize="14"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <TextBlock
                Text="{Binding LastUpdatedText}"
                FontSize="12"
                Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
        </StackPanel>

        <!-- Loading State -->
        <StackPanel
            Margin="0,40,0,0"
            HorizontalAlignment="Center"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <ProgressBar
                Width="220"
                Height="5"
                Margin="0,0,0,12"
                IsIndeterminate="True" />
            <TextBlock
                Text="Loading news..."
                FontSize="14"
                HorizontalAlignment="Center"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- News Items -->
        <ItemsControl
            ItemsSource="{Binding NewsItems}"
            Visibility="{Binding IsLoading, Converter={StaticResource InvertBoolToVis}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ui:Card Margin="0,0,0,14" Padding="14">
                        <StackPanel>

                            <!-- Title -->
                            <TextBlock
                                Text="{Binding Title}"
                                Margin="0,0,0,4"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                            <!-- Date + New Badge -->
                            <StackPanel
                                Margin="0,0,0,10"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Text="{Binding Date, StringFormat='{}{0:MMMM dd, yyyy}'}"
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                                <Border
                                    Margin="8,0,0,0"
                                    Padding="6,1"
                                    VerticalAlignment="Center"
                                    CornerRadius="4"
                                    Background="{DynamicResource AccentFillColorPrimaryBrush}"
                                    Visibility="{Binding IsNew, Converter={StaticResource BoolToVis}}">
                                    <TextBlock
                                        Text="{Binding AgeLabel}"
                                        FontSize="10"
                                        FontWeight="Bold"
                                        VerticalAlignment="Center"
                                        Foreground="White" />
                                </Border>
                            </StackPanel>

                            <!-- Image -->
                            <Image
                                Source="{Binding Image}"
                                Height="200"
                                Margin="0,0,0,10"
                                Stretch="UniformToFill"
                                SnapsToDevicePixels="True"
                                Visibility="{Binding Image, Converter={StaticResource NullToVisibilityConverter}}">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Opacity" Value="0" />
                                        <Style.Triggers>
                                            <EventTrigger RoutedEvent="Image.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Opacity"
                                                            From="0"
                                                            To="1"
                                                            Duration="0:0:0.3"
                                                            FillBehavior="HoldEnd" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>

                            <!-- Content -->
                            <TextBlock
                                Text="{Binding DisplayContent}"
                                Margin="0,0,0,10"
                                FontSize="13"
                                TextWrapping="Wrap"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

                            <!-- Tags -->
                            <ItemsControl ItemsSource="{Binding Tags}" Margin="0,4,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            Content="{Binding}"
                                            Margin="0,4,6,0"
                                            Padding="8,3"
                                            FontSize="12"
                                            Cursor="Hand"
                                            Foreground="{DynamicResource AccentFillColorPrimaryBrush}"
                                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{DynamicResource AccentFillColorPrimaryBrush}"
                                            BorderThickness="1"
                                            Command="{Binding DataContext.OpenUrlCommand,
                                                RelativeSource={RelativeSource AncestorType={x:Type ui:UiPage}}}"
                                            CommandParameter="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </StackPanel>
                    </ui:Card>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
</ui:UiPage>
