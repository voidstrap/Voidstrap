<ui:UiPage
    x:Class="Voidstrap.UI.Elements.Settings.Pages.HubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Voidstrap.UI.Elements.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Voidstrap.UI.ViewModels"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Name="HubPageView"
    Title="HubPage"
    d:DesignWidth="800"
    Scrollable="True"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <StackPanel Margin="4" Orientation="Horizontal">
                <Image
                    Width="32"
                    Height="32"
                    Margin="0,0,8,0"
                    Source="{Binding ImagePath}" />
                <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>

        <Style x:Key="ThemeListBoxStyle" TargetType="ListBox">
            <Setter Property="SelectionMode" Value="Multiple" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Width" Value="390" />
            <Setter Property="Height" Value="228" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Grid.ColumnSpan" Value="2" />
            <Setter Property="Margin" Value="192,0,0,0" />
        </Style>
    </Page.Resources>

    <StackPanel Margin="0">
        <!--  Search  -->
        <Grid Height="36" Margin="0,0,0,14">
            <ui:TextBox
                x:Name="SearchBox"
                Height="32"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                BorderThickness="0"
                FocusVisualStyle="{x:Null}"
                FontSize="14"
                Icon="Search48"
                PlaceholderText="{x:Static resources:Strings.Menu_FastFlagEditor_Search}"
                TextChanged="SearchBox_TextChanged" />
        </Grid>

        <StackPanel x:Name="ResultsPanel" Margin="0">
            <GroupBox Margin="0,0,0,14" Header="Plexity">
                <StackPanel>
                    <TextBlock>
                        <Run Foreground="Gray" Text="Credit: Plexity Team | Bratic" />
                        <LineBreak />
                        <Run
                            FontWeight="Bold"
                            Foreground="DodgerBlue"
                            Text="Type: App" />
                    </TextBlock>
                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ListBox ItemTemplate="{StaticResource ItemTemplate}" Style="{StaticResource ThemeListBoxStyle}">
                            <ListBox.Background>
                                <ImageBrush ImageSource="/UI/Elements/Settings/Pages/icon (1).png" Stretch="UniformToFill" />
                            </ListBox.Background>
                            <Border Width="100" Height="100" />
                        </ListBox>

                        <ui:Button
                            Grid.ColumnSpan="2"
                            Width="370"
                            Margin="202,186,0,0"
                            VerticalAlignment="Top"
                            Click="InstallButton_Click10000"
                            Content="Website"
                            Icon="ArrowDownload48" />
                    </Grid>
                </StackPanel>
            </GroupBox>
            <GroupBox Margin="0,0,0,14" Header="Bloxstrap theme">
                <StackPanel>
                    <TextBlock>
                        <Run Foreground="Gray" Text="Credit: TheKliko" />
                        <LineBreak />
                        <Run
                            FontWeight="Bold"
                            Foreground="DodgerBlue"
                            Text="Type: Mod" />
                    </TextBlock>
                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ListBox ItemTemplate="{StaticResource ItemTemplate}" Style="{StaticResource ThemeListBoxStyle}">
                            <ListBox.Background>
                                <ImageBrush ImageSource="/UI/Elements/Settings/Pages/BloxstrapTheme.png" Stretch="Fill" />
                            </ListBox.Background>
                            <Border Width="100" Height="100" />
                        </ListBox>

                        <ui:Button
                            Grid.ColumnSpan="2"
                            Width="370"
                            Margin="202,186,0,0"
                            VerticalAlignment="Top"
                            Click="InstallButton_Click2"
                            Content="Install"
                            Icon="ArrowDownload48" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="0,0,0,14" Header="Kliko's mod">
                <StackPanel>
                    <TextBlock>
                        <Run Foreground="Gray" Text="Credit: TheKliko" />
                        <LineBreak />
                        <Run
                            FontWeight="Bold"
                            Foreground="DodgerBlue"
                            Text="Type: Mod" />
                    </TextBlock>
                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ListBox ItemTemplate="{StaticResource ItemTemplate}" Style="{StaticResource ThemeListBoxStyle}">
                            <ListBox.Background>
                                <ImageBrush ImageSource="/UI/Elements/Settings/Pages/klikos-mod-thumbnail.png" Stretch="Fill" />
                            </ListBox.Background>
                        </ListBox>

                        <ui:Button
                            Grid.ColumnSpan="2"
                            Width="370"
                            Margin="202,186,0,0"
                            VerticalAlignment="Top"
                            Click="InstallButton_Click3"
                            Content="Install"
                            Icon="ArrowDownload48" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="0" Header="Bayiarin Smoother Animations and Effects">
                <StackPanel>
                    <TextBlock>
                        <Run Foreground="Gray" Text="Credit: bayiarin_lx" />
                        <LineBreak />
                        <Run
                            FontWeight="Bold"
                            Foreground="DodgerBlue"
                            Text="Type: FFlags" />
                    </TextBlock>
                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ListBox ItemTemplate="{StaticResource ItemTemplate}" Style="{StaticResource ThemeListBoxStyle}">
                            <ListBox.Background>
                                <ImageBrush ImageSource="pack://application:,,,/UI/Elements/Settings/Pages/AnimationEffects.png" Stretch="Fill" />
                            </ListBox.Background>
                        </ListBox>

                        <ui:Button
                            Grid.ColumnSpan="2"
                            Width="370"
                            Margin="202,186,0,0"
                            VerticalAlignment="Top"
                            Click="CopyButton_Click"
                            Content="Copy"
                            Icon="Copy24" />
                    </Grid>
                </StackPanel>
            </GroupBox>


            <GroupBox Margin="0" Header="Bratics Super Performace FFlags">
                <StackPanel>
                    <TextBlock>
                        <Run Foreground="Gray" Text="Credit: Bratic" />
                        <LineBreak />
                        <Run
                            FontWeight="Bold"
                            Foreground="DodgerBlue"
                            Text="Type: FFlags" />
                    </TextBlock>
                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ListBox ItemTemplate="{StaticResource ItemTemplate}" Style="{StaticResource ThemeListBoxStyle}">
                            <ListBox.Background>
                                <ImageBrush ImageSource="/UI/Elements/Settings/Pages/BraticFF.png" Stretch="Fill" />
                            </ListBox.Background>
                        </ListBox>

                        <ui:Button
                            Grid.ColumnSpan="2"
                            Width="370"
                            Margin="202,186,0,0"
                            VerticalAlignment="Top"
                            Click="CopyButton_Click3"
                            Content="Copy"
                            Icon="Copy24" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="0" Header="Better Roblox">
                <StackPanel>
                    <TextBlock>
                        <Run Foreground="Gray" Text="Credit: 7btxd" />
                        <LineBreak />
                        <Run
                            FontWeight="Bold"
                            Foreground="DodgerBlue"
                            Text="Type: Theme" />
                    </TextBlock>
                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ListBox ItemTemplate="{StaticResource ItemTemplate}" Style="{StaticResource ThemeListBoxStyle}">
                            <ListBox.Background>
                                <ImageBrush ImageSource="/UI/Elements/Settings/Pages/RobloxBB.png" Stretch="Fill" />
                            </ListBox.Background>
                        </ListBox>

                        <ui:Button
                            Grid.ColumnSpan="2"
                            Width="370"
                            Margin="202,186,0,0"
                            VerticalAlignment="Top"
                            Click="InstallButton_Click4"
                            Content="Install"
                            Icon="ArrowDownload48" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="0" Header="Cmd">
                <StackPanel>
                    <TextBlock>
                        <Run Foreground="Gray" Text="Credit: 7btxd" />
                        <LineBreak />
                        <Run
                            FontWeight="Bold"
                            Foreground="DodgerBlue"
                            Text="Type: Theme" />
                    </TextBlock>
                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ListBox ItemTemplate="{StaticResource ItemTemplate}" Style="{StaticResource ThemeListBoxStyle}">
                            <ListBox.Background>
                                <ImageBrush ImageSource="/UI/Elements/Settings/Pages/CmdBB.png" Stretch="Fill" />
                            </ListBox.Background>
                        </ListBox>

                        <ui:Button
                            Grid.ColumnSpan="2"
                            Width="370"
                            Margin="202,186,0,0"
                            VerticalAlignment="Top"
                            Click="InstallButton_Click5"
                            Content="Install"
                            Icon="ArrowDownload48" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="0" Header="Great Wave">
                <StackPanel>
                    <TextBlock>
                        <Run Foreground="Gray" Text="Credit: 7btxd" />
                        <LineBreak />
                        <Run
                            FontWeight="Bold"
                            Foreground="DodgerBlue"
                            Text="Type: Theme" />
                    </TextBlock>
                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ListBox ItemTemplate="{StaticResource ItemTemplate}" Style="{StaticResource ThemeListBoxStyle}">
                            <ListBox.Background>
                                <ImageBrush ImageSource="/UI/Elements/Settings/Pages/GWBB.png" Stretch="Fill" />
                            </ListBox.Background>
                        </ListBox>

                        <ui:Button
                            Grid.ColumnSpan="2"
                            Width="370"
                            Margin="202,186,0,0"
                            VerticalAlignment="Top"
                            Click="InstallButton_Click6"
                            Content="Install"
                            Icon="ArrowDownload48" />
                    </Grid>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </StackPanel>
</ui:UiPage>
