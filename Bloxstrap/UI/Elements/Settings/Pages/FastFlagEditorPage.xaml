<ui:UiPage
    x:Class="Voidstrap.UI.Elements.Settings.Pages.FastFlagEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Voidstrap.UI.Elements.Settings.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="FastFlagEditorPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    
    mc:Ignorable="d">

    <Grid Margin="0,0,14,14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        

        <!-- Description -->
        <TextBlock Grid.Row="0" Margin="0,0,0,16"
                   Text="{x:Static resources:Strings.Menu_FastFlagEditor_Description}"
                   FontSize="14"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

        <!-- Buttons and Flag Count in Grid.Row=2 -->

        <WrapPanel Grid.Row="2" Orientation="Horizontal">
            <ui:Button
                Width="110"
                Margin="0,0,10,16"
                Click="AddButton_Click"
                Content="{x:Static resources:Strings.Menu_FastFlagEditor_AddNew}"
                Icon="AddCircle24"/>
            <ui:Button
                Margin="0,0,10,16"
                VerticalAlignment="Top"
                Appearance="Danger"
                Background="#ff3334"
                Click="DeleteButton_Click"
                Content="{x:Static resources:Strings.Menu_FastFlagEditor_DeleteSelected}"
                Icon="SlideEraser24">
                <ui:Button.PressedBackground>
                    <SolidColorBrush Opacity="0.7" Color="#ff5c5d" />
                </ui:Button.PressedBackground>
                <ui:Button.MouseOverBackground>
                    <SolidColorBrush Opacity="0.9" Color="#ff5c5d" />
                </ui:Button.MouseOverBackground>
                <ui:Button.Style>
                    <Style BasedOn="{StaticResource {x:Type ui:Button}}" TargetType="{x:Type ui:Button}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedItems.Count, ElementName=DataGrid}" Value="0">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ui:Button.Style>
            </ui:Button>
            <ui:Button
                Margin="0,0,10,16"
                Click="DeleteAllButton_Click"
                Content="Delete all"
                Icon="Delete48"/>
            <ui:Button
                Margin="0,0,10,16"
                VerticalAlignment="Top"
                Click="CopyJSONButton_Click1"
                ClipToBounds="True"
                Content="Copy all"
                Icon="Clipboard16"/>
            <ui:Button
                Margin="0,0,10,16"
                VerticalAlignment="Top"
                Click="CopyJSONButton_Click2"
                ClipToBounds="True"
                Content="Copy Better JSON"
                Icon="Copy16"/>
            <ui:Button
                Margin="0,0,10,16"
                VerticalAlignment="Top"
                Click="ExportJSONButton_Click"
                Content="{x:Static resources:Strings.Menu_FastFlagEditor_ExportJson}"
                Icon="ArrowExit20"/>
            <ui:Button
                Width="95"
                Margin="0,0,10,16"
                VerticalAlignment="Top"
                Click="FlagProfiles_Click"
                Content="Profiles"
                Icon="Edit28"/>
            <ToggleButton
                x:Name="TogglePresetsButton"
                Margin="0,0,10,16"
                VerticalAlignment="Top"
                Click="ToggleButton_Click"
                Content="{x:Static resources:Strings.Menu_FastFlagEditor_ShowPresetFlags}" />

        </WrapPanel>

        <!-- Flag Count Text -->
        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Right"
            FontSize="14"
            Margin="0,71,10,5"
            Foreground="{StaticResource TextFillColorSecondaryBrush}"
            x:Name="TotalFlagsTextBlock"
            Text="Flags added: 0" />
            <!-- Search Bar -->
        <Grid Grid.Row="3" Height="40" Margin="0,0,1,5">
            <ui:TextBox x:Name="SearchTextBox"
                        Height="32"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        BorderThickness="0"
                        FocusVisualStyle="{x:Null}"
                        FontSize="14"
                        Icon="Search48"
                        PlaceholderText="{x:Static resources:Strings.Menu_FastFlagEditor_Search}"
                        TextChanged="SearchTextBox_TextChanged"/>
            <TextBlock x:Name="SuggestionTextBlock"
                       Cursor="Hand"
                       Margin="12,0,11,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="13.85"
                       Foreground="#FF51A2ED"
                       Opacity="0"
                       Visibility="Collapsed"
                       RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TranslateTransform x:Name="SuggestionTranslateTransform" X="10"/>
                </TextBlock.RenderTransform>
                <Run Text="Looking For"/>
                <Run x:Name="SuggestionKeywordRun" Text="" FontWeight="Bold"/>
                <Run Text="?"/>
            </TextBlock>
        </Grid>

        <!-- Data Grid -->
        <DataGrid
            Name="DataGrid"
            Grid.Row="4"
            Margin="0,0,0,-9"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="False"
            CellEditEnding="DataGrid_CellEditEnding"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column">
            <DataGrid.Style>
                <Style BasedOn="{StaticResource {x:Type DataGrid}}" TargetType="DataGrid">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                </Style>
            </DataGrid.Style>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}" />
                    <Setter Property="Height" Value="30" />
                    <Setter Property="Padding" Value="12,0,12,0" />
                    <Setter Property="BorderBrush" Value="{DynamicResource ControlElevationBorderBrush}" />
                    <Setter Property="BorderThickness" Value="1" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Height" Value="30" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="6,0,6,0" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource TextOnAccentFillColorPrimary}" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource SystemAccentColorSecondary}" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Preset" x:Name="PresetColumn">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Height="50" Width="25" Source="{Binding Preset}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Width="425"  Binding="{Binding Name}" Header="{x:Static resources:Strings.Common_Name}" />
                <DataGridTextColumn Width="*" Binding="{Binding Value}" Header="{x:Static resources:Strings.Common_Value}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Expander -->
        <Expander Grid.Row="6" IsExpanded="False" Header="FFlag History"
          Margin="0,30,0,0" ExpandDirection="Up"
          Background="{DynamicResource ControlFillColorTertiaryBrush}"
          ToolTip="Shows the history of feature flag (FFlag) changes and updates. This only applies when you edit them. Expand to view the detailed list.">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                  CanContentScroll="True"
                  PanningMode="VerticalOnly">
                <ListBox x:Name="HistoryListBox"
                 Background="Transparent"
                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                 BorderThickness="1"
                 FontSize="13"
                 MaxHeight="200">
                    <!-- Adjust height as needed -->
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Expander>

    </Grid>
</ui:UiPage>
