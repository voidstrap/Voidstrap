<base:WpfUiWindow
    x:Class="Voidstrap.UI.Elements.Bootstrapper.FluentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vms="clr-namespace:Voidstrap.UI.ViewModels.Bootstrapper"
    Width="500"
    Height="280"
    MinHeight="0"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="NoResize"
    WindowBackdropType="{Binding WindowBackdropType, Mode=OneTime}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    Closing="UiWindow_Closing"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vms:FluentDialogViewModel, IsDesignTimeCreatable=True}">

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo 
            ProgressState="{Binding TaskbarProgressState}" 
            ProgressValue="{Binding TaskbarProgressValue}" />
    </Window.TaskbarItemInfo>

    <Grid>
        <Image
    x:Name="BackgroundImage"
    Stretch="Fill"
    OpacityMask="Black"
    Panel.ZIndex="-1" />

        <!-- Color Overlay -->
        <Rectangle Fill="{Binding BackgroundColourBrush, Mode=OneWay}" />

        <!-- Title Bar for drag support -->
        <ui:TitleBar
            VerticalAlignment="Top"
            CanMaximize="False"
            ShowClose="False"
            ShowMaximize="False"
            ShowMinimize="False" />

        <Grid Margin="32,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image
                Grid.Row="0"
                Width="90"
                Height="90"
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="{Binding Icon, Mode=OneWay}">
                <Image.Effect>
                    <DropShadowEffect 
                        Color="Black"
                        BlurRadius="10"
                        ShadowDepth="5"
                        Direction="315"
                        Opacity="0.5"/>
                </Image.Effect>
            </Image>

            <TextBlock
                Grid.Row="1"
                Margin="0,0,0,8"
                HorizontalAlignment="Center"
                FontSize="16"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Text="{Binding Message, Mode=OneWay}"
                TextWrapping="Wrap"
                TextAlignment="Center" />

            <!-- Progress Bar -->
            <ProgressBar
                Grid.Row="2"
                Margin="0,8,0,16"
                Height="11"
                IsIndeterminate="{Binding ProgressIndeterminate, Mode=OneWay}"
                Maximum="{Binding ProgressMaximum, Mode=OneWay}"
                Value="{Binding ProgressValue, Mode=OneWay}" />

            <!-- Cancel Button -->
            <Button
                Grid.Row="3"
                Width="240"
                Padding="4"
                HorizontalAlignment="Center"
                FontSize="14"
                Content="{x:Static resources:Strings.Common_Cancel}"
                Command="{Binding CancelInstallCommand}"
                IsEnabled="{Binding CancelEnabled, Mode=OneWay}" />
        </Grid>
    </Grid>
</base:WpfUiWindow>
