<base:WpfUiWindow
    x:Class="Hellstrap.UI.Elements.Bootstrapper.FluentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Hellstrap.UI.Elements.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:Hellstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vms="clr-namespace:Hellstrap.UI.ViewModels.Bootstrapper"
    Width="505"
    Height="285"
    MinHeight="0"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    Closing="UiWindow_Closing"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="NoResize"
    WindowBackdropType="{Binding WindowBackdropType, Mode=OneTime}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vms:FluentDialogViewModel}">

    <!-- Taskbar Progress Indicator -->
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo 
            ProgressState="{Binding TaskbarProgressState}" 
            ProgressValue="{Binding TaskbarProgressValue}" />
    </Window.TaskbarItemInfo>

    <!-- Main UI Layout -->
    <Grid Background="{Binding BackgroundColourBrush, Mode=OneTime}">

        <!-- Custom Title Bar -->
        <ui:TitleBar
            VerticalAlignment="Top"
            CanMaximize="False"
            ShowClose="False"
            ShowMaximize="False"
            ShowMinimize="False" />

        <!-- Version Information -->
        <TextBlock 
            x:Name="VersionTextBlock"
            Margin="5"
            VerticalAlignment="Top" 
            HorizontalAlignment="Center"
            FontSize="10" 
            FontFamily="{StaticResource Rubik}"
            Text="{Binding VersionText}" 
            Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

        <!-- Content Grid -->
        <Grid Margin="32,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- App Icon -->
            <Image
                Grid.Row="0"
                Width="95"
                Height="95"
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="{Binding Icon}" />

            <!-- Status Message -->
            <TextBlock
                Grid.Row="1"
                Margin="0,10,0,8"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Text="{Binding Message}"
                TextWrapping="Wrap" />

            <!-- Progress Bar -->
            <ProgressBar
                Grid.Row="2"
                Margin="10,0,10,16"
                Height="5"
                IsIndeterminate="{Binding ProgressIndeterminate}"
                Maximum="{Binding ProgressMaximum}"
                Value="{Binding ProgressValue}" />

            <!-- Cancel Button -->
            <Button
                Grid.Row="3"
                Width="231"
                Padding="6"
                HorizontalAlignment="Center"
                Command="{Binding CancelInstallCommand}"
                Content="{x:Static resources:Strings.Common_Cancel}"
                FontSize="14"
                Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                IsEnabled="{Binding CancelEnabled}" />
        </Grid>

    </Grid>

</base:WpfUiWindow>
