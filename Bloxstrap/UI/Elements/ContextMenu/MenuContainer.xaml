<base:WpfUiWindow
    x:Class="Voidstrap.UI.Elements.ContextMenu.MenuContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:Voidstrap.UI.Elements.ContextMenu"
    xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    mc:Ignorable="d"
    Title="ContextMenuContainer"
    Width="0"
    Height="0"
    MinWidth="0"
    MinHeight="0"
    Top="-100"
    Left="-100"
    ShowInTaskbar="False"
    WindowStyle="None"
    ResizeMode="NoResize"
    WindowStartupLocation="Manual"
    Loaded="Window_Loaded"
    Closed="Window_Closed">

    <ui:UiWindow.ContextMenu>
        <ContextMenu>

            <MenuItem IsEnabled="False">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image
                            Grid.Column="0"
                            Source="pack://application:,,,/Voidstrap.ico"
                            RenderOptions.BitmapScalingMode="HighQuality"/>

                        <TextBlock
                            x:Name="VersionTextBlock"
                            Grid.Column="1"
                            Margin="6,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Voidstrap v2.4.1"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem
                x:Name="CurrentGameMenuItem"
                IsEnabled="False"
                Visibility="Collapsed">
                <MenuItem.Header>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border
                            Grid.Column="0"
                            Width="20"
                            Height="20"
                            CornerRadius="2"
                            VerticalAlignment="Center">
                            <Image
                                x:Name="CurrentGameIcon"
                                Width="20"
                                Height="20"
                                Stretch="UniformToFill"/>
                        </Border>

                        <TextBlock
                            x:Name="CurrentGameNameTextBlock"
                            Grid.Column="1"
                            Margin="6,0,0,0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem x:Name="FlagsMenuItem" IsEnabled="False">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="Flag24"/>
                        <TextBlock
                            x:Name="FlagsTextBlock"
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Flags: 0"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem IsEnabled="False">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="Timer24"/>
                        <TextBlock
                            x:Name="PlayTimeTextBlock"
                            Grid.Column="1"
                            Margin="6,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="PlayTime: 00:00:00"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <Separator/>

            <MenuItem
                x:Name="RichPresenceMenuItem"
                Header="{x:Static resources:Strings.Common_DiscordRichPresence}"
                IsCheckable="True"
                IsChecked="True"
                Visibility="Collapsed"
                Click="RichPresenceMenuItem_Click"/>

            <MenuItem
                x:Name="InviteDeeplinkMenuItem"
                Visibility="Collapsed"
                Click="InviteDeeplinkMenuItem_Click">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="ClipboardLink24"/>
                        <TextBlock
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            Text="{x:Static resources:Strings.ContextMenu_CopyDeeplinkInvite}"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem
                x:Name="JoinClosestServerMenuItem"
                Visibility="Collapsed"
                Click="JoinClosestServerMenuItem_Click">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="Rocket24"/>
                        <TextBlock
                            x:Name="JoinClosestServerTextBlock"
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            Text="Join Closest Server"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem
                x:Name="BetterBloxDataCentersMenuItem"
                Click="BetterBloxDataCentersMenuItem_Click">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="DataArea24"/>
                        <TextBlock
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            Text="BetterBLOX"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem
                x:Name="GamePassDetailsMenuItem"
                Visibility="Collapsed"
                Click="GamePassDetailsMenuItem_Click">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="Money24"/>
                        <TextBlock Grid.Column="1" Margin="4,0,0,0" Text="GamePass Info"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem
                x:Name="ServerDetailsMenuItem"
                Visibility="Collapsed"
                Click="ServerDetailsMenuItem_Click">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="Info28"/>
                        <TextBlock
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            Text="{x:Static resources:Strings.ContextMenu_ServerInformation_Title}"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem
                x:Name="OutputConsoleMenuItem"
                Visibility="Collapsed"
                Click="OutputConsoleMenuItem_Click">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="AnimalRabbit24"/>
                        <TextBlock
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            Text="{x:Static resources:Strings.Menu_Context_PlayerLogs}"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem
                x:Name="ChatLogsMenuItem"
                Visibility="Collapsed"
                Click="ChatLogsMenuItemMenuItem_Click">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="Chat24"/>
                        <TextBlock
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            Text="{x:Static resources:Strings.ContextMenu_MessageLogs_Title}"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem
                x:Name="MusicMenuItem"
                Visibility="Collapsed"
                Click="MusicPlayerMenuItem_Click">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="MusicNote224"/>
                        <TextBlock Grid.Column="1" Margin="4,0,0,0" Text="Music Player"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem
                x:Name="GameHistoryMenuItem"
                Visibility="Collapsed"
                Click="JoinLastServerMenuItem_Click">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="History24"/>
                        <TextBlock
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            Text="{x:Static resources:Strings.ContextMenu_GameHistory_Title}"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem Click="CloseRobloxMenuItem_Click">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="WindowHeaderHorizontalOff20"/>
                        <TextBlock
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            Text="{x:Static resources:Strings.ContextMenu_CloseRoblox}"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem
                x:Name="LogTracerMenuItem"
                Visibility="Collapsed"
                Click="LogTracerMenuItem_Click">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Grid.Column="0" Symbol="DocumentCatchUp20"/>
                        <TextBlock
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            Text="{x:Static resources:Strings.Common_OpenLogFile}"/>
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

        </ContextMenu>
    </ui:UiWindow.ContextMenu>
</base:WpfUiWindow>
