<base:WpfUiWindow x:Class="Voidstrap.UI.Elements.ContextMenu.ServerHistory"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:Voidstrap.UI.Elements.ContextMenu"
                  xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base"
                  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  xmlns:models="clr-namespace:Voidstrap.UI.ViewModels.ContextMenu"
                  xmlns:resources="clr-namespace:Voidstrap.Resources"
                  xmlns:enums="clr-namespace:Voidstrap.Enums"
                  d:DataContext="{d:DesignInstance Type=models:ServerHistoryViewModel}"
                  mc:Ignorable="d"
                  Title="{x:Static resources:Strings.ContextMenu_GameHistory_Title}"
                  MinWidth="600"
                  MinHeight="500"
                  Width="800"
                  Height="600"
                  Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                  ExtendsContentIntoTitleBar="True"
                  WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0.0" Color="{DynamicResource WindowBackgroundColorPrimary}" />
                <GradientStop Offset="0.5" Color="{DynamicResource WindowBackgroundColorSecondary}" />
                <GradientStop Offset="1.0" Color="{DynamicResource WindowBackgroundColorThird}" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar x:Name="RootTitleBar"
                     Grid.Row="0"
                     Padding="12,8"
                     Title="{x:Static resources:Strings.ContextMenu_GameHistory_Title}"
                     ShowMinimize="False"
                     ShowMaximize="False"
                     CanMaximize="False"
                     Icon="pack://application:,,,/Voidstrap.ico"
                     Background="{DynamicResource WindowTitleBarBackgroundBrush}" />

        <TextBlock Grid.Row="1"
                   Margin="20,8,20,4"
                   FontSize="15"
                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                   Text="{x:Static resources:Strings.ContextMenu_GameHistory_Description}"
                   TextWrapping="Wrap" />

        <TextBlock Grid.Row="2"
                   Margin="20,8"
                   Text="{Binding Error}"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource ErrorTextBrush}">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding LoadState}" Value="{x:Static enums:GenericTriState.Failed}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        
        <ui:ProgressRing Grid.Row="2"
                         Margin="0,20"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         IsIndeterminate="True"
                         Foreground="{DynamicResource ProgressRingForegroundBrush}">
            <ui:ProgressRing.Style>
                <Style TargetType="ui:ProgressRing">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding LoadState}" Value="{x:Static enums:GenericTriState.Unknown}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ui:ProgressRing.Style>
        </ui:ProgressRing>

        <ListView Grid.Row="2"
                  Margin="12"
                  ItemsSource="{Binding GameHistory}"
                  Background="{DynamicResource ListViewBackgroundBrush}"
                  BorderThickness="0"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.Style>
                <Style TargetType="ListView">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding LoadState}" Value="{x:Static enums:GenericTriState.Successful}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.Style>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0,4"/>
                    <Setter Property="Focusable" Value="False"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="4"
                                        SnapsToDevicePixels="True">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ListViewItemHoverBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ui:Card Margin="4"
                             Padding="10"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource CardBorderBrush}"
                             Background="{DynamicResource CardBackgroundBrush}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
        Width="130"
        Height="130"
        CornerRadius="12"
        BorderThickness="1"
        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    Margin="4">
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding UniverseDetails.Thumbnail.ImageUrl, IsAsync=True}"
                                                Stretch="UniformToFill" />
                                </Border.Background>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="16,8,8,8" VerticalAlignment="Center">
                                <TextBlock Text="{Binding UniverseDetails.Data.Name}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                                <TextBlock Text="{Binding GameHistoryDescription}"
                                           Margin="0,4,0,8"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

                                <UniformGrid Columns="3" Rows="1" Margin="0,0,0,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Joined: " Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                                        <TextBlock Text="{Binding DisplayTimeJoined}" Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Left: " Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                                        <TextBlock Text="{Binding DisplayTimeLeft}" Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Status: " Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                                        <TextBlock Text="{Binding ServerStatus}" Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                    </StackPanel>
                                </UniformGrid>

                                <StackPanel Orientation="Horizontal">
                                    <ui:Button Content="{x:Static resources:Strings.ContextMenu_GameHistory_Rejoin}"
                                               Command="{Binding DataContext.LaunchDeeplinkCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}"
                                               Appearance="Success"
                                               Icon="Play28"
                                               IconFilled="True"
                                               Foreground="White" />

                                    <ui:Button Margin="8,0,0,0"
                                               Content="Copy Deeplink"
                                               Command="{Binding DataContext.CopyDeeplinkCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}"
                                               Appearance="Secondary"
                                               Foreground="White" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </ui:Card>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</base:WpfUiWindow>
