<base:WpfUiWindow
    x:Class="Voidstrap.UI.Elements.ContextMenu.CustomThemeEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:base="clr-namespace:Voidstrap.UI.Elements.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dmodels="clr-namespace:Voidstrap.UI.ViewModels.Editor"
    xmlns:local="clr-namespace:Voidstrap.UI.Elements.Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Width="900"
    Height="630"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    ExtendsContentIntoTitleBar="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Offset="0.00" Color="{DynamicResource WindowBackgroundColorPrimary}"/>
                <GradientStop Offset="0.70" Color="{DynamicResource WindowBackgroundColorSecondary}"/>
                <GradientStop Offset="1.00" Color="{DynamicResource WindowBackgroundColorThird}"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ui:TitleBar
            x:Name="RootTitleBar"
            Title="Theme Editor"
            Grid.Row="0"
            Padding="8"
            ForceShutdown="False"
            Icon="pack://application:,,,/Voidstrap.ico"
            MinimizeToTray="False"
            UseSnapLayout="True" />

        <avalonedit:TextEditor
            x:Name="CodeEditor"
            Grid.Row="1"
            FontFamily="Consolas"
            FontSize="14"
            Background="#1E1E1E"
            Foreground="#D4D4D4"
            ShowLineNumbers="True"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"/>

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,10,10,10">

            <ui:Button
                Content="Pick Color"
                Width="110"
                Appearance="Primary"
                Margin="0,0,8,0"
                Click="PickColor_Click"/>

            <ui:Button
                Content="Apply"
                Appearance="Primary"
                Margin="0,0,8,0"
                Click="Apply_Click"/>

            <ui:Button
        Content="Copy Error"
        Appearance="Secondary"
        Margin="0,0,8,0"
        Click="CopyErrors_Click"/>

            <ui:Button
                Content="Reload"
                Appearance="Secondary"
                Click="Reload_Click"/>
        </StackPanel>

        <!-- Log Console -->
        <TextBox
            x:Name="LogConsole"
            Grid.Row="3"
            Background="#252526"
            Foreground="#FFFFFF"
            FontFamily="Consolas"
            FontSize="12"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Auto"
            TextWrapping="Wrap"
            Margin="5"/>
    </Grid>
</base:WpfUiWindow>
