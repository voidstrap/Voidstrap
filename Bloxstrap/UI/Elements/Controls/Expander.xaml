<UserControl
    x:Class="Voidstrap.UI.Elements.Controls.Expander"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Voidstrap.UI.Elements.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Name="Control"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Expander
        VerticalAlignment="Top"
        Padding="8"
        Content="{Binding InnerContent, ElementName=Control}"
        IsExpanded="{Binding IsExpanded, ElementName=Control}">

        <Expander.Header>
            <Grid VerticalAlignment="Center" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Icon with proper margin and alignment -->
                <ui:SymbolIcon
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="0,0,8,0"
                    Symbol="{Binding HeaderIcon, ElementName=Control}" />

                <!-- TextBlock with text wrapping support -->
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Text="{Binding HeaderText, ElementName=Control}"
                    FontWeight="SemiBold"
                    TextWrapping="Wrap" />
            </Grid>
        </Expander.Header>
    </Expander>
</UserControl>
